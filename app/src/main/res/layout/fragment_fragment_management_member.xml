<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.ground.ground.controller.fc.management.FragmentManagementMember">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <CheckBox
                android:layout_width="19.5dp"
                android:layout_height="19.5dp"
                android:id="@+id/button13"
                android:checked="false"
                android:button="@drawable/check_box_club_message"
                android:layout_margin="5dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="18dp" />


            <ImageView
                android:layout_width="87.5dp"
                android:layout_height="28dp"
                android:id="@+id/button37"
                android:src="@drawable/send901"
                android:layout_marginRight="3dp" />

            <ImageView
                android:layout_width="87.5dp"
                android:layout_height="28dp"
                android:id="@+id/button38"
                android:src="@drawable/manage901"
                android:layout_marginRight="3dp" />

            <ImageView
                android:layout_width="87.5dp"
                android:layout_height="28dp"
                android:id="@+id/button39"
                android:src="@drawable/manage_out_901"
                android:layout_marginRight="3dp" />

            <ImageView
                android:layout_width="53dp"
                android:layout_height="28dp"
                android:id="@+id/button42"
                android:src="@drawable/out901" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView_management_member"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:dividerHeight="1dp"
        android:divider="@drawable/list_divider_noti"/>

</RelativeLayout>
