<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_your_profile"
    tools:context="com.android.ground.ground.controller.person.profile.YourProfileActivity">
    <com.android.ground.ground.custom.CustomCircularImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/memImage"
        android:src="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/winLoseDraw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:siBorderWidth="6dp"
        app:siBorderColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="김강수(남)"
        android:id="@+id/memNameGender"
        android:layout_below="@+id/position"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="뛰는 것이 좋소이다."
        android:id="@+id/memIntro"
        android:layout_below="@+id/memNameGender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="경기기록"
        android:id="@+id/textView63"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnRequest"
        android:layout_alignEnd="@+id/btnRequest" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="승패: 3승 2패"
        android:id="@+id/winLoseDraw"
        android:layout_below="@+id/textView63"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="득점: 3골 2도움"
        android:id="@+id/score"
        android:layout_below="@+id/winLoseDraw"
        android:layout_alignRight="@+id/winLoseDraw"
        android:layout_alignEnd="@+id/winLoseDraw" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MVP: 2회"
        android:id="@+id/mvp"
        android:layout_below="@+id/score"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="실력"
        android:id="@+id/skill"
        android:layout_below="@+id/mvp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memIntro"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/linearLayout7">

        <com.android.ground.ground.custom.CustomCircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/oldClubImage1"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            app:siBorderWidth="6dp"
            app:siBorderColor="@color/colorPrimary"
            android:visibility="invisible" />

        <com.android.ground.ground.custom.CustomCircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/oldClubImage2"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            app:siBorderWidth="6dp"
            app:siBorderColor="@color/colorPrimary"
            android:visibility="invisible" />

        <com.android.ground.ground.custom.CustomCircularImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/oldClubImage3"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            app:siBorderWidth="6dp"
            app:siBorderColor="@color/colorPrimary"
            android:visibility="invisible" />
    </LinearLayout>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button8"
        android:id="@+id/linearLayout8">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가입권유"
            android:id="@+id/btnRequest"
            android:layout_alignParentTop="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메시지보내기"
            android:id="@+id/btnMsg"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FC페이지"
            android:id="@+id/btnFc"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/btnRequest"
            android:layout_toEndOf="@+id/btnRequest" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/button9"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="기본정보"
            android:id="@+id/textView68"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="소속"
        android:id="@+id/textView69"
        android:layout_below="@+id/relativeLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="신림 FC"
        android:id="@+id/clubName"
        android:layout_alignTop="@+id/textView69"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="나이"
        android:id="@+id/textView71"
        android:layout_below="@+id/textView69"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="26"
        android:id="@+id/age"
        android:layout_below="@+id/clubName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="활동지역"
        android:id="@+id/textView73"
        android:layout_below="@+id/textView71"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="서울시 신림"
        android:id="@+id/memLocationName"
        android:layout_below="@+id/age"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="활동요일"
        android:id="@+id/textView75"
        android:layout_below="@+id/textView73"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="토, 일"
        android:id="@+id/textView76"
        android:layout_below="@+id/memLocationName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.android.ground.ground.custom.CustomCircularImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/clubImage"
        android:layout_alignTop="@+id/memImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher"
        app:siBorderWidth="6dp"
        app:siBorderColor="@color/colorPrimary"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView75"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="월"
            android:id="@+id/memMainDay_Mon"
            android:layout_below="@+id/textView75"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="화"
            android:id="@+id/memMainDay_Tue"
            android:layout_alignTop="@+id/memMainDay_Mon"
            android:layout_toRightOf="@+id/memMainDay_Mon"
            android:layout_toEndOf="@+id/memMainDay_Mon"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수"
            android:id="@+id/memMainDay_Wed"
            android:layout_alignTop="@+id/memMainDay_Tue"
            android:layout_toRightOf="@+id/memMainDay_Tue"
            android:layout_toEndOf="@+id/memMainDay_Tue"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="목"
            android:id="@+id/memMainDay_Thu"
            android:layout_alignTop="@+id/memMainDay_Wed"
            android:layout_toRightOf="@+id/memMainDay_Wed"
            android:layout_toEndOf="@+id/memMainDay_Wed"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="금"
            android:id="@+id/memMainDay_Fri"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="토"
            android:id="@+id/memMainDay_Sat"
            android:checked="false" />

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="일"
            android:id="@+id/memMainDay_Sun"
            android:checked="false" />
    </LinearLayout>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/position"
        android:layout_below="@+id/memImage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@mipmap/ic_launcher" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/managerYN"
        android:layout_alignTop="@+id/position"
        android:layout_toRightOf="@+id/textView69"
        android:layout_toEndOf="@+id/textView69"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>
