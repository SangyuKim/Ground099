<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.ground.ground.controller.person.login.SignupFragment"
    android:background="#ffffffff">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="5px"
        android:fillViewport="false"
        android:id="@+id/scrollView_signup">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_my_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/ic_launcher"
                android:focusable="false"
                android:layout_below="@+id/textView5"
                android:layout_alignRight="@+id/textView5"
                android:layout_alignEnd="@+id/textView5" />

            <TextView
                android:id="@+id/textView49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진입력"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/imageView_my_profile"
                android:layout_centerHorizontal="true" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_alignTop="@+id/radioGroup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/textView47"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동지역"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/linearLayout52"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:id="@+id/button_area_search"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역 검색"
                android:focusable="false"
                android:layout_below="@+id/linearLayout52"
                android:layout_toRightOf="@+id/textView6"
                android:layout_toEndOf="@+id/textView6" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:focusable="false"
                android:layout_below="@+id/textView49"
                android:layout_toRightOf="@+id/textView45"
                android:layout_toEndOf="@+id/textView45">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남"
                    android:checked="false"
                    android:focusable="false" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="여"
                    android:checked="false"
                    android:focusable="false" />

            </RadioGroup>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/radioGroup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout52">

                <TextView
                    android:id="@+id/textView46"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="나이"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/radioGroup" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner2" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Medium Text"
                android:id="@+id/textView6"
                android:layout_below="@+id/linearLayout52"
                android:layout_toRightOf="@+id/textView47"
                android:layout_toEndOf="@+id/textView47" />

            <TextView
                android:id="@+id/textView50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="소개"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/linearLayout53"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <EditText
                android:id="@+id/editText_signup"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:singleLine="true"

                android:layout_below="@+id/linearLayout53"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_toRightOf="@+id/textView50"
                android:layout_toEndOf="@+id/textView50" />

            <TextView
                android:id="@+id/textView51"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="포지션"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/editText_signup"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_position"
                android:layout_below="@+id/editText_signup"
                android:layout_toRightOf="@+id/textView51"
                android:layout_toEndOf="@+id/textView51" />

            <TextView
                android:id="@+id/textView52"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="본인 실력"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_below="@+id/spinner_position"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_ability"
                android:layout_alignTop="@+id/textView52"
                android:layout_toRightOf="@+id/textView52"
                android:layout_toEndOf="@+id/textView52" />

            <Button
                android:id="@+id/button_complete"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top"
                android:text="선수 등록하기"
                android:focusable="false"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_area_search"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/linearLayout53">

                <TextView
                    android:id="@+id/textView48"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="주 활동 요일"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:layout_below="@+id/button_area_search"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView48"
                    android:checked="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox"
                    android:layout_toEndOf="@+id/checkBox"
                    android:layout_toRightOf="@+id/checkBox"
                    android:checked="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox2"
                    android:layout_toEndOf="@+id/checkBox2"
                    android:layout_toRightOf="@+id/checkBox2"
                    android:checked="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox3"
                    android:layout_toEndOf="@+id/checkBox3"
                    android:layout_toRightOf="@+id/checkBox3"
                    android:checked="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox4"
                    android:layout_toEndOf="@+id/checkBox4"
                    android:layout_toRightOf="@+id/checkBox4"
                    android:checked="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox5"
                    android:layout_toEndOf="@+id/checkBox5"
                    android:layout_toRightOf="@+id/checkBox5"
                    android:checked="false"
                    android:focusable="false" />

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/checkBox6"
                    android:layout_toEndOf="@+id/checkBox6"
                    android:layout_toRightOf="@+id/checkBox6"
                    android:checked="false"
                    android:focusable="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="선수등록"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>
    </ScrollView>

</FrameLayout>
