<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="FullscreenTheme" parent="AppTheme">-->
        <!--<item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>-->
        <!--<item name="android:windowActionBarOverlay">true</item>-->
        <!--<item name="android:windowBackground">@null</item>-->
        <!--<item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>-->
        <!--<item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>-->
    <!--</style>-->

    <!--<style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">-->
        <!--&lt;!&ndash;<item name="android:background">@color/black_overlay</item>&ndash;&gt;-->
    <!--</style>-->
    <style name="MyDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@drawable/windowBackground</item>
    </style>
    <style name="button" parent="@android:style/Widget.Button">
        <item name="android:gravity">center_vertical|center_horizontal</item>
        <item name="android:textColor">@color/color6</item>
        <item name="android:textSize">16sp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="com_kakao_profile_property_value" parent="@android:style/Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">57dp</item>
        <item name="android:layout_marginLeft">16sp</item>
        <item name="android:layout_marginRight">16sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingLeft">15sp</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">@color/color2</item>
        <item name="android:textColor">@color/color3</item>
        <item name="android:background">@drawable/selector_editbox_bg</item>
    </style>
    <style name="CustomProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.App.EditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#96ff3a1d</item>
        <item name="colorPrimary">#96ff3a1d</item>
        <item name="colorPrimaryDark">#96ff3a1d</item>
        <item name="colorAccent">#96ff3a1d</item>
        <item name="colorControlActivated">#96ff3a1d</item>
        <item name="colorControlHighlight">#96ff3a1d</item>
        <!--<item name="colorButtonNormal">#96ff3a1d</item>-->
        <!--<item name="colorSwitchThumbNormal">#96ff3a1d</item>-->

    </style>
    <style name="Theme.App.Switch" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorControlNormal">#ff3a1d</item>
        <item name="colorPrimary">#ff3a1d</item>
        <item name="colorPrimaryDark">#ff3a1d</item>
        <item name="colorAccent">#ff3a1d</item>
        <item name="colorControlActivated">#ff3a1d</item>
        <item name="colorControlHighlight">#ff3a1d</item>
        <!--<item name="colorButtonNormal">#96ff3a1d</item>-->
        <!--<item name="colorSwitchThumbNormal">#96ff3a1d</item>-->

    </style>
    <style name="Theme.App.FLoatingButton" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">#b7b7b7</item>
    </style>

    <style name="Theme.App.Spinner" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorAccent">@color/spinner</item>
        <item name="colorControlNormal">@color/spinner</item>
    </style>
    <style name="Scroller">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/slider_back</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    <style name="PageFrame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/page_padding</item>
        <item name="android:paddingRight">@dimen/page_padding</item>
    </style>

    <style name="TileContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="TileTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">@dimen/page_title_text_size</item>
    </style>

    <style name="Subtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">#6fff</item>
    </style>

</resources>
